<h1 class="text-center">Cancer Diagnosis Prediction</h1>
<form action="/predict" method="POST" class="mt-4">
  <% features.forEach((feature) => { %>
  <div class="mb-3">
    <label for="<%= feature %>" class="form-label"
      ><%= feature.replace('_', ' ') %></label
    >
    <input
      type="number"
      step="any"
      class="form-control"
      id="<%= feature %>"
      name="<%= feature %>"
      placeholder="Enter <%= feature.replace('_', ' ') %>"
      required
    />
  </div>
  <% }) %>
  <button type="submit" class="btn btn-primary">Predict Diagnosis</button>
</form>

<% if (result) { %>
<div class="alert alert-success mt-4" role="alert"><%= result %></div>
<% } %> <% if (precision !== null) { %>
<div class="alert alert-info mt-4" role="alert">
  Precision of the model: <%= precision %>
</div>
<% } %>
